{% extends 'base.html.twig' %}

{% block title %}{{ repo.getName() }}{% endblock %}

{% block body %}
    <div class="container-fluid" id="repo-detail">
        <nav aria-label="breadcrumb" class="mt-2">
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">{{ repo.getName() }}</li>
          </ol>
        </nav>
        <h1 class="mt-3 mb-4">{{ repo.getName() }}</h1>
        <div class="card">
            <div class="card-header">
                Details
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item"><span class="item-title">Repository ID:</span> {{ repo.getRepositoryId() }}</li>
                <li class="list-group-item"><span class="item-title">URL:</span> <a href="{{ repo.getUrl() }}" target="_blank">{{ repo.getUrl() }}</a></li>
                <li class="list-group-item"><span class="item-title">Created:</span> {{ repo.getCreatedDate() }}</li>
                <li class="list-group-item"><span class="item-title">Last Push:</span> {{ repo.getLastPushDate() }}</li>
                <li class="list-group-item"><span class="item-title">Description:</span> {{ repo.getDescription() }}</li>
                <li class="list-group-item"><span class="item-title">Number of Stars:</span> {{ repo.getStars()|number_format(0) }}</li>
            </ul>
        </div>
        <div class="my-5">
            <a class="btn btn-primary" href="/" role="button">Back to List</a>
        </div>
    </div>
{% endblock %}
